{
	"manifest_version": 2,

	"name": "Share, Yo!",
	"description": "Share any page with your buds on Yo with one click!",
	"version": "1.0",

	"options_page": 
		"opening.html",
		
	"browser_action": {
		"default_icon": "purple.png",
		"default_popup": "main.html"
	},

	"background": {
		"page": "background.html",
		"persistent": true
	},

	"permissions": ["tabs", "storage"]
}